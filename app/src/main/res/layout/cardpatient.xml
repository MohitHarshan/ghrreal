<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:elevation="10dp"
    android:id="@+id/patientcard"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PATIENT ID"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/Red"
        android:id="@+id/patientid"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PATEINT NAME"
        android:layout_below="@+id/patientid"
        android:id="@+id/patientname"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/Textcolor"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/patientname"
            android:layout_marginLeft="20dp"
            android:text="AGE"
            android:textColor="@color/Textcolor"
            android:layout_marginTop="10dp"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PATIENT ID"
            android:layout_toRightOf="@+id/patientname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/Textcolor"
            android:id="@+id/patientidentry"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PATEINT NAME"
            android:layout_below="@+id/patientid"
            android:id="@+id/patientnameentry"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/patientname"
            android:textColor="@color/Textcolor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/patientageentry"
            android:layout_below="@id/patientname"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/patientname"
            android:text="AGE"
            android:textColor="@color/Textcolor"
            android:layout_marginTop="10dp"


            />

        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_list_black_24dp"
             android:id="@+id/option"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>