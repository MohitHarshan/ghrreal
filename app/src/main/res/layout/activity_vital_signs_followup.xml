<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    android:orientation="vertical"
    tools:context="com.example.reubro.ghr.PatientDetailsActivity$PlaceholderFragment">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vital signs"
        android:id="@+id/vitals"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/Textcolor"
        android:textSize="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vitals"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PULSE : "
            android:textSize="20dp"
            android:textColor="@color/Textcolor"
            android:layout_marginLeft="20dp"
            android:id="@+id/pulse"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
android:singleLine="true"
            android:layout_marginRight="20dp"
            android:id="@+id/pulseeentry"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BP (Sitting) :"
            android:textSize="20dp"
            android:textColor="@color/Textcolor"
            android:layout_marginLeft="20dp"
            android:id="@+id/bp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Systolic: "
            android:textSize="15dp"
            android:textColor="@color/Textcolor"
            android:layout_marginLeft="50dp"
            android:id="@+id/systolic"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/systolicentry"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diastolic :"
            android:textSize="15dp"
            android:textColor="@color/Textcolor"
            android:layout_below="@+id/systolic"
            android:layout_marginLeft="50dp"
            android:id="@+id/diastolic"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/systolicentry"
            android:singleLine="true"
            android:layout_toRightOf="@+id/pulse"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/diastolicentry"

            />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="SUBMIT"
        android:id="@+id/submitvital"
        android:background="@drawable/buttonlogin"

        />



</LinearLayout>