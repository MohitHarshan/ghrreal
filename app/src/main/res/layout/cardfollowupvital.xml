<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="20dp"
    android:layout_margin="10dp"
    android:padding="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow up number: "
        android:textColor="@color/Textcolor"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/followtext"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follownumberentry"
        android:layout_toRightOf="@+id/followtext"
        android:layout_marginLeft="10dp"

        android:textSize="18dp"
        android:textColor="@color/Red"
        android:text="1"

        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow up Date: "
            android:textColor="@color/Textcolor"
            android:layout_below="@+id/followtext"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/followdatetext"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followdateentry"
            android:layout_toRightOf="@+id/followdatetext"
            android:layout_marginLeft="10dp"
        android:layout_below="@+id/followtext"
            android:layout_marginTop="20dp"

            android:textSize="18dp"
            android:textColor="@color/Red"
            android:text="11/11/11"

            />

    </RelativeLayout>
</android.support.v7.widget.CardView>


</RelativeLayout>